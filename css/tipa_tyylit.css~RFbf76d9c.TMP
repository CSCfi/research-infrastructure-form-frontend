/*
haetaan googlen Coiny fontti
*/

@import url('https://fonts.googleapis.com/css?family=Roboto');

.hero {
    position: relative;
}

body {
    background-color: fff;
    font-family: Inconsolata, Arial, Helvetica, sans-serif; 
    
}

fieldset {
    border: none;
}

h1 {
    color:#3e3fa8;
}

/*Field m채채ritt채채 vastauspalkin koon */

.field {
width: 100%;
    display: block;
    margin-bottom: 1em;
}

.row_field {
    display: block;
    float: left;
}


.form-control {
    width: 80;
    display: inline-block;
}

/* Label ja input aloittamaan palkit samalta kohtaa */

label{
    display: inline-block;
    float: left;
    clear: left;
    width: 100%;
    text-align: left;
}
input {
  display: inline-block;
  float: left;
}

.box {
    margin-bottom: 1em;
    display: block;
    float: left;
    clear: right;
     
}

/* Osion otsikon tyyli */

legend {
  display: block;
  padding: 2px;
  border: none;
  font-weight: bold; 
    margin-top: 10px;
}

/* Seliterivi */


.lisatieto {
    font-size: .8em !important; 
    margin-top: -1em;
    font-style: italic !important; 
    display: block !important; 
    float: left;
}

